<Button>
    size_hint: (0.2, 0.2)
    background_normal: ''
    background_color: (100/255,110/255,140/255,1)

<CalculatorWidget>
    BoxLayout
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: input_box
            text: "0"
            font_size: 50
            multiline: False
            halign: "right"
            background_color: (60/255, 70/255, 100/255, 1)
            foreground_color: (1, 1, 1, 1)

        GridLayout:
            cols: 4
            rows: 5

            ### Row 1 ####
            Button:
                text: "C"
                font_size: 40
                on_press: root.clear()
            Button:
                text: "%"
                font_size: 40
                on_press: root.sings("%")



            Button:
                text: "del"
                font_size: 40
                on_press: root.remove_last()

            Button:
                text: "/"
                font_size: 40
                background_color: (80/255,90/255,120/255,1)
                on_press: root.sings("/")

            #### Row 2 #####
            Button:
                text: "7"
                font_size: 40
                on_press: root.button_value(7)

            Button:
                text: "8"
                font_size: 40
                on_press: root.button_value(8)

            Button:
                text: "9"
                font_size: 40
                on_press: root.button_value(9)

            Button:
                text: "*"
                font_size: 40
                background_color: (80/255,90/255,120/255,1)
                on_press: root.sings("*")

            #### Row 3 ###
            Button:
                text: "4"
                font_size: 40
                on_press: root.button_value(4)

            Button:
                text: "5"
                font_size: 40
                on_press: root.button_value(5)

            Button:
                text: "6"
                font_size: 40
                on_press: root.button_value(6)

            Button:
                text: "-"
                font_size: 40
                background_color: (80/255,90/255,120/255,1)
                on_press: root.sings("-")

            ### Row 4 ###
            Button:
                text: "1"
                font_size: 40
                on_press: root.button_value(1)

            Button:
                text: "2"
                font_size: 40
                on_press: root.button_value(2)

            Button:
                text: "3"
                font_size: 40
                on_press: root.button_value(3)

            Button:
                text: "+"
                font_size: 40
                background_color: (80/255,90/255,120/255,1)
                on_press: root.sings("+")

            ### Row 5 ###
            Button:
                text: "+/-"
                font_size: 40
                on_press: root.positive_negative()

            Button:
                text: "0"
                font_size: 40
                on_press: root.button_value(0)

            Button:
                text: ","
                font_size: 40
                on_press: root.dot()

            Button:
                text: "="
                font_size: 40
                background_color: (80/255,90/255,120/255,1)
                on_press: root.results()